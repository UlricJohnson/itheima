	}

	public static char charAt(String str, int index) throws Exception {
		if (str == null) {
			throw new Exception("字符串不能为null");
		} else if (str.equals("")) {
			throw new Exception("字符串不能为空");
		} else if (index < 0 || index >= str.length()) {

		}
		return str.charAt(index);
	}

}
